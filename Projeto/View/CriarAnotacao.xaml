<Window x:Class="View.CriarAnotacao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="CriarAnotacao" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Imagem/pg.jpg"></ImageBrush>
    </Window.Background>
    <Grid>
        <Grid HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <Grid.RowDefinitions>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="370*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="177*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="txtDataHora" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="517,339,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="181" Loaded="Form_Loaded" IsEnabled="False"/>
            <TextBlock x:Name="Tiluto" Grid.Column="1" HorizontalAlignment="Left" Margin="10,31,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Título" VerticalAlignment="Top" Height="24" Width="96" FontSize="20"/>
            <TextBox x:Name="txtTitulo" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10,60,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="269"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,88,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Descrição" VerticalAlignment="Top" FontSize="20"/>
            <TextBox x:Name="txtDescricao" Grid.Column="1" HorizontalAlignment="Left" Height="186" Margin="10,120,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="497"/>
            <Button x:Name="btn_Salvar" Content="Salvar" Grid.Column="1" HorizontalAlignment="Left" Margin="10,340,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="btnSalvar"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Grid.Column="1" HorizontalAlignment="Left" Margin="108,340,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="btnCancelar_Click"/>
        </Grid>
    </Grid>
</Window>
