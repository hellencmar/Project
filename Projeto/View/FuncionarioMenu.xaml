        <Grid HorizontalAlignment="Left" Height="253" Margin="10,6,0,0" VerticalAlignment="Top" Width="272">
            <Grid.RowDefinitions>
                <RowDefinition Height="34*"/>
                <RowDefinition Height="219*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="233*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="GerenciarFuncionarios" Content="Gerenciar Funcionarios" Grid.Column="1" HorizontalAlignment="Left" Margin="10,89,0,0" Grid.Row="1" VerticalAlignment="Top" Width="146" Click="btnGerenciarFuncionarios"/>
        </Grid>

    </Grid>
</Window>
