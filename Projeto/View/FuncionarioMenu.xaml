        mc:Ignorable="d"
        Title="FuncionarioMenu" Height="292.105" Width="506.391">
    <Window.Background>
        <ImageBrush ImageSource="Imagem/pg.jpg"></ImageBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="CadastrarFuncionario" Content="Cadastrar Funcionario" HorizontalAlignment="Left" Margin="58,55,0,0" VerticalAlignment="Top" Width="148" Click="btnCadastrarFunc"/>
