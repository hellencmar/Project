<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid RenderTransformOrigin="0.438,0.548">
        <Button x:Name="EspacoCli" Content="Espaço Cliente" HorizontalAlignment="Left" Margin="50,82,0,0" VerticalAlignment="Top" Width="147" Click="btnEspacoCli"/>
        <Button x:Name="EspacoFun" Content="Espaço Funcionario" HorizontalAlignment="Left" Margin="50,265,0,0" VerticalAlignment="Top" Width="147" Click="btnEspacoFun"/>
        <Button x:Name="EspacoAnot" Content="Fazer Anotações" HorizontalAlignment="Left" Margin="362,265,0,0" VerticalAlignment="Top" Width="147" Click="btnAnotacao"/>
        <DataGrid x:Name="dgAnotacao" HorizontalAlignment="Left" Height="208" Margin="362,52,0,0" VerticalAlignment="Top" Width="304" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" Loaded="Window_Loaded" IsReadOnly="True" RowDetailsVisibilityMode="Collapsed" MouseDoubleClick="dgAnotacao_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path= AnotacaoID}" Width="50"/>
                <DataGridTextColumn Header="Assunto" Binding="{Binding Path= Assunto}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>



    </Grid>
</Window>
